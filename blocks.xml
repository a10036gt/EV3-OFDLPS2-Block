        <ParameterReference Name="b_R_R2" />
        <ParameterReference Name="b_R_R3" />
        <ParameterReference Name="b_OX_O" />
        <ParameterReference Name="b_OX_X" />
        <ParameterReference Name="b_OX_Triangle" />
        <ParameterReference Name="b_OX_Square" />
